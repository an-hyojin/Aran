<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorYellow"
        android:orientation="horizontal"
        tools:context=".MatchEmotionActivity"
        >

        <Button
            android:id="@+id/back"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="이전으로"
            android:textColor="@color/colorBlack"
            android:autoSizeTextType="uniform"
            android:paddingLeft="3dp"
            android:drawableLeft="@drawable/backbtn"
            android:drawablePadding="8dp"
            android:gravity="left|center_vertical"
            style="?android:attr/borderlessButtonStyle"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <Button
                android:id="@+id/retry"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="다시하기"
                android:textColor="@color/colorBlack"
                android:autoSizeTextType="uniform"
                android:paddingLeft="3dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/retry"
                style="?android:attr/borderlessButtonStyle" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:autoSizeTextType="uniform"
        android:layout_width="match_parent"
        android:text="@string/matchEmotion_act"/>

    <TextView
        android:id="@+id/countLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="Q1"
        android:textSize="15sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/emotion_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/emotion01"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1"
                    android:background="@drawable/angrycard"
                    android:onClick="onClick"  />

                <ImageButton
                    android:id="@+id/emotion02"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1"
                    android:background="@drawable/smilecard"
                    android:onClick="onClick" />

                <ImageButton
                    android:id="@+id/emotion03"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1"
                    android:background="@drawable/disgustcard"
                    android:onClick="onClick" />

                <ImageButton
                    android:id="@+id/emotion04"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1"
                    android:background="@drawable/heartcard"
                    android:onClick="onClick" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/emotion05"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1"
                    android:background="@drawable/sadcard"
                    android:onClick="onClick" />

                <ImageButton
                    android:id="@+id/emotion06"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1"
                    android:background="@drawable/scarycard"
                    android:onClick="onClick" />

                <ImageButton
                    android:id="@+id/emotion07"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1"
                    android:background="@drawable/surprisedcard"
                    android:onClick="onClick" />

                <ImageButton
                    android:id="@+id/emotion08"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1"
                    android:background="@drawable/fullcard"
                    android:onClick="onClick" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
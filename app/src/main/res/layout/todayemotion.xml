<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:layout_margin="5dp"
            android:id="@+id/smile"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/smile"/>
        <ImageButton
            android:layout_margin="5dp"
            android:id="@+id/sad"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/sad"/>
        <ImageButton
            android:id="@+id/angry"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/angry"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/heart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/heart"/>
        <ImageButton
            android:id="@+id/full"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/full"/>
        <ImageButton
            android:id="@+id/scary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/scary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/disgust"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/disgust"/>
        <ImageButton
            android:id="@+id/surprise"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/surprised"/>
        <ImageButton
            android:id="@+id/etc"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/what_emotion"/>
    </LinearLayout>
    <EditText
        android:layout_gravity="center"
        android:id="@+id/emotionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></EditText>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:layout_margin="5dp"
        android:id="@+id/admit"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:text="확인"
        android:background="@drawable/buttonborder"/>
    <Button
        android:layout_margin="5dp"
        android:id="@+id/dismiss"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="취소"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/buttonborder"/>
</LinearLayout>
</LinearLayout>
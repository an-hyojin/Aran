<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorIvory"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/title"
        android:orientation="horizontal"
        tools:context=".Card.EasyCardActivity"
        >

        <Button
            android:id="@+id/back"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="이전으로"
            android:textColor="@color/colorBlack"
            android:autoSizeTextType="uniform"
            android:paddingLeft="3dp"
            android:drawableLeft="@drawable/backbtn"
            android:drawablePadding="8dp"
            android:gravity="left|center_vertical"
            style="?android:attr/borderlessButtonStyle"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <Button
                android:id="@+id/retry"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="다시하기"
                android:textColor="@color/colorBlack"
                android:autoSizeTextType="uniform"
                android:paddingLeft="3dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/retry"
                style="?android:attr/borderlessButtonStyle" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center">
        <TextView
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:autoSizeTextType="uniform"
            android:layout_width="match_parent"
            android:textColor="@color/colorBlack"
            android:text="@string/card_act"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        tools:layout_editor_absoluteX="-130dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_margin="4dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/card01"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card02"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card03"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card04"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_margin="4dip"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/card05"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card06"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card07"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card08"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
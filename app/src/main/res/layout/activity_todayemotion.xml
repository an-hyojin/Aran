<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorYellow"
        android:orientation="horizontal"
        tools:context=".CardActivity"
        >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/backbtn"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center">
        <TextView

            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:autoSizeTextType="uniform"
            android:layout_width="match_parent"
            android:text="오늘의 감정"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="-130dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="531dp"
            android:layout_margin="75dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dip"
                android:layout_margin="4dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/emotion1"
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/emotion2"
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dip"
                android:layout_margin="4dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/emotion3"
                    android:layout_width="125dip"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/emotion4"
                    android:layout_width="125dip"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dip"
                android:layout_margin="4dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/emotion5"
                    android:layout_width="125dip"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/emotion6"
                    android:layout_width="125dip"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dip"
                android:layout_margin="4dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/emotion7"
                    android:layout_width="125dip"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/emotion8"
                    android:layout_width="125dip"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
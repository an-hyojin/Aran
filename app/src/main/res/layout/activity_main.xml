<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/colorYellow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
       >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="소리 설정"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onoffSound"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FAD969"
            android:textSize="50sp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="@string/app_name"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/level"
                android:drawableLeft="@drawable/drawing_drawable"
                android:drawablePadding="30dp"
                android:gravity="left|center"
                android:textColor="@color/colorBlack"
                style="?android:attr/borderlessButtonStyle"
                android:paddingLeft="20dp"
                android:text="감정따라그리기"
                android:textSize="25sp" />
            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/level"
                android:drawableLeft="@drawable/match_emotion_drawable"
                android:drawablePadding="30dp"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:text="다양한 표정 맞추기" />
            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/level"
                android:drawableLeft="@drawable/card_drawable"
                android:drawablePadding="20dp"
                android:textColor="@color/colorBlack"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:text="감정카드" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textSize="25sp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/level"
                android:drawableLeft="@drawable/animation_drawable"
                android:drawablePadding="20dp"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:text="애니메이션" />

            <Button
                android:id="@+id/btn5"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="25sp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/level"
                android:drawableLeft="@drawable/calendar_drawable"
                android:drawablePadding="20dp"
                android:gravity="left|center"
                android:textColor="@color/colorBlack"
                android:paddingLeft="20dp"
                android:text="감정 캘린더" />
            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/level"
                android:drawableLeft="@drawable/stickerbook_drawable"
                android:drawablePadding="30dp"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:text="감정들과 육아팁" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/level"
                android:drawableLeft="@drawable/stickerbook_drawable"
                android:drawablePadding="30dp"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:text="스티커 북" />


        </LinearLayout>

</LinearLayout>
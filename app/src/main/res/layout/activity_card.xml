<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorYellow"
        android:orientation="horizontal"
        tools:context=".HardCardActivity"
        >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/backbtn"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <ImageButton
                android:id="@+id/retry"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/retry" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:autoSizeTextType="uniform"
            android:gravity="center_horizontal"
            android:text="@string/card_act" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        tools:layout_editor_absoluteX="-130dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_margin="4dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/card01"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card02"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card03"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card04"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_margin="4dip"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/card05"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card06"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card07"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card08"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_margin="4dip"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/card09"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card10"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card11"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card12"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_margin="4dip"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/card13"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card14"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card15"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/card16"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>